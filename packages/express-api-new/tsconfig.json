// packages/worker/tsconfig.json
{
  "compilerOptions": {
    "baseUrl": ".",                         // local base
    "paths": {
      "@vision-rag/shared-workflows": ["../shared-workflows/src/*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2017",
    "outDir": "dist",
    "rootDir": "src",                       // ðŸ‘ˆ only compile your worker's code
    "strict": true,
  },
  "include": ["src"],
  "references": [
    { "path": "../shared-workflows" }      // ðŸ‘ˆ TS project reference to the shared code
  ],
}
